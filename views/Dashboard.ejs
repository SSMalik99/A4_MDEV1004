<%- include('Header', {title: title}); %>

<%- include('PublicHeader', {loggedIn: loggedIn}); %>

    <div class="container bg-gray mb-5" >
       <div class="d-flex justify-content-center mt-3">
         <h3>Welcome to Personal Dashboard</h3>

       </div>
       <hr>

       <div class="">
        <div>
            <h4>Profile: </h4>
        </div>
        <hr>
        <div >
            <div class="d-flex justify-content-center">
                <img src="<%= user.picture %>" class="rounded p-3"/>
            </div>

            <div class="row border border-1 p-2 border-secondary mb-4">
                <div class="col-md-6"> 
                    <span class="fw-bold">
                        Given Name :
                    </span>
                </div> 
                <div class="col-md-6">
                    <input type="text" value="<%= user.given_name %>" disabled class="form-control" >
                </div>
            </div>

            <div class="row border border-1 p-2 border-secondary mb-4">
                <div class="col-md-6"> 
                    <span class="fw-bold">
                        Family Name :
                    </span>
                </div> 
                <div class="col-md-6">
                    <input type="text" value="<%= user.family_name %>" disabled class="form-control" >
                </div>
            </div>

            <div class="row border border-1 p-2 border-secondary mb-4">
                <div class="col-md-6"> 
                    <span class="fw-bold">
                        Nick Name :
                    </span>
                </div> 
                <div class="col-md-6">
                    <input type="text" value="<%= user.email %>" disabled class="form-control" >
                </div>
            </div>

            <div class="row border border-1 p-2 border-secondary mb-4">
                <div class="col-md-6"> 
                    <span class="fw-bold">
                        Email :
                    </span>
                </div> 
                <div class="col-md-6">
                    <input type="text" value="<%= user.email %>" disabled class="form-control" >
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <a href="/logout" class="btn btn-danger">Logout</a>
            </div>
        </div>
       </div>

       

    </div>
<%- include('Footer')  %>